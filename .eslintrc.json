{
    "env": {
        "es2021": true,
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true,
        "mocha": true
    },
      "globals": {
        "process": true,
        "React": true,
        "cy": true,
        "shallow": true,
        "render": true,
        "mount": true,
        "Cypress": true
      },
      "plugins": [
        "import",
        "react",
        "react-hooks",
        "no-smart-quotes"
      ],  
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:react/recommended"
      ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true,
          "jsx": true,
          "modules": true
        },
        "sourceType": "module"
      },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
